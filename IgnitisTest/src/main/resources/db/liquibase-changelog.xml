<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <changeSet id="drop_user_role_table" author="Gleb">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="user_roles"/>
        </preConditions>
        <dropTable cascadeConstraints="true"
                   tableName="user_roles"/>
    </changeSet>

    <changeSet id="drop_posts_table" author="Gleb">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="posts"/>
        </preConditions>
        <dropTable cascadeConstraints="true"
                   tableName="posts"/>
    </changeSet>

    <changeSet id="drop_users_table" author="Gleb">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="users"/>
        </preConditions>
        <dropTable cascadeConstraints="true"
                   tableName="users"/>
    </changeSet>

    <changeSet author="Gleb" id="dropSequence">
        <preConditions onFail="MARK_RAN">
            <sequenceExists sequenceName="global_seq"/>
        </preConditions>
        <dropSequence
                sequenceName="global_seq"/>
    </changeSet>

    <changeSet id="add_global_sequence" author="Gleb">
        <createSequence
                cycle="true"
                incrementBy="1"
                maxValue="200000"
                minValue="100000"
                sequenceName="global_seq"
                startValue="100000"/>
    </changeSet>

    <changeSet id="create_users_table" author="Gleb">
        <createTable tableName="users">
            <column name="id" type="INTEGER" defaultValueComputed="nextval('global_seq')">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="email" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="registered" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="users_unique_email_idx" author="Gleb">
        <createIndex indexName="users_unique_email_idx" tableName="users" unique="true">
            <column name="email"/>
        </createIndex>
    </changeSet>
    <changeSet id="create_user_roles_table" author="Gleb">
        <createTable tableName="user_roles">
            <column name="user_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Gleb" id="addForeignKeyConstraint-users">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="user_roles"
                                 constraintName="fk_user_id"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="users"
                                 validate="true"/>
    </changeSet>

    <changeSet id="create_posts_table" author="Gleb">
        <createTable tableName="posts">
            <column name="id" type="INTEGER" defaultValueComputed="nextval('global_seq')">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(120)">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Gleb" id="addForeignKeyConstraint-posts">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="posts"
                                 constraintName="fk_post_id"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="users"
                                 validate="true"/>
    </changeSet>

    <!--    Add test data to DB-->
    <changeSet id="test_data_inserts" author="Gleb">
    </changeSet>
</databaseChangeLog>